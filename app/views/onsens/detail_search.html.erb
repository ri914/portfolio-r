<%= render 'onsens/region-nav' %>

<div class="form-body-search">
  <div class="card shadow-lg p-4">
    <div class="card-body">
      
      <h1 class="text-center mb-4">詳細検索</h1>

      <%= form_with(url: search_with_details_onsens_path, method: :get, local: true, html: { id: 'detail-search-form' }) do |form| %>
        <div class="form-group mb-3">
          <%= form.label :keyword, "キーワード", class: 'form-label' %>
          <%= form.text_field :keyword, class: 'form-control', placeholder: 'キーワードを入力' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :location, "都道府県", class: 'form-label' %>
          <%= form.select :location, Onsen.prefectures, { prompt: '選択してください' }, class: 'form-select' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :water_quality_ids, "泉質", class: 'form-label' %>
          <div class="custom-checkbox-container">
            <%= form.collection_check_boxes :water_quality_ids, WaterQuality.all, :id, :name do |b| %>
              <div class="custom-checkbox">
                <%= b.check_box(class: 'check-box') %>
                <%= b.label(class: 'check-label') %>
              </div>
            <% end %>
          </div>
          <small class="form-text text-muted">複数の泉質を選択できます。</small>
        </div>

        <div class="text-center">
          <%= form.submit "検索", class: 'btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
